<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3 style="margin-top:0.5rem">Edit Listing</h3>
            <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="form-item">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" id="title" class="form-control" name="listing[title]" value="<%=listing.title%>" required> 
                    <div class="valid-feedback">
                        Title Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Title is invalid.
                    </div>       
                </div>

                <div class="form-item">
                    <label for="description" class="form-label">Description</label>
                    <textarea id="description" class="form-control" name="listing[description]" required><%=listing.description%></textarea>
                    <div class="invalid-feedback">
                        Description is invalid.
                    </div>  
                </div>
            
                <div class="form-item mb-3">
                    <p class="mt-3 mb-1">Original Image</p>
                   <img src="<%=imageUrl%>">
                </div>

                <div class="form-item">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input type="file" id="image" class="form-control" name="listing[image]">
                </div>
                
                <div class="row">
                    <div class=" form-item col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" id="price" class="form-control" name="listing[price]" value="<%=listing.price%>" required>
                        <div class="invalid-feedback">
                            Price is invalid.
                        </div>  
                    </div>
                    <div  class="form-item col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" id="country" class="form-control" name="listing[country]" value="<%=listing.country%>" required>
                        <div class="invalid-feedback">
                            Country is invalid.
                        </div>  
                    </div>
                </div>
                
                <div class="form-item">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" id="location" class="form-control" name="listing[location]" value="<%=listing.location%>" required>
                    <div class="invalid-feedback">
                        Location is invalid.
                    </div>  
                </div>
        
                <button class="btn add-btn"  style="margin-top:3rem;margin-bottom:1rem;" type="submit">Edit</button>
            </form>
        </div>
    </div>
</body>
