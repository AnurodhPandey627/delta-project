<% layout("/layouts/boilerplate.ejs") %>
<body>
        <div class="row">
            <div class="col-8 offset-2">

                <h3 style="margin-top:0.5rem;">Create a new Listing</h3>

                <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">

                    <div class="form-item">
                        <label for="title" class="form-label">Title</label>
                        <input type="text"  id="title" class="form-control" name="listing[title]" placeholder="enter title" required>
                        <div class="invalid-feedback">
                            Title is not valid.
                        </div>
                    </div>
                    
                    <div class="form-item">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="listing[description]" placeholder="enter description" required></textarea>
                        <div class="invalid-feedback">
                            Description is not valid.
                        </div>
                    </div>
                    
                    <div class="form-item">
                        <label for="image" class="form-label">Upload Listing Image</label>
                        <input type="file"  id="image" class="form-control" name="listing[image]" placeholder="enter image url/link" required>
                        <div class="invalid-feedback">
                            Please upload listing image.
                        </div>
                    </div>
                
                    <div class="row">
                        <div class="form-item col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" id="price" class="form-control" name="listing[price]" placeholder="enter price" required>
                            <div class="invalid-feedback">
                                Price is not valid.
                            </div>
                        </div>
                        <div class="form-item col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" id="country" class="form-control" name="listing[country]" placeholder="enter country" required>
                            <div class="invalid-feedback">
                                Country is not valid.
                            </div>
                        </div>
                    </div>
                
                    <div class="form-item">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" id="location" class="form-control" name="listing[location]" placeholder="enter location" required>
                        <div class="invalid-feedback">
                            Location is not valid.
                        </div>
                    </div>
            
                    <button class="btn add-btn btn-dark"  style="margin-top:3rem;margin-bottom:1rem;" type="submit">Add</button>

                </form>    
            </div>
        </div>
        
</body>
