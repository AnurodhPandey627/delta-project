<% layout("/layouts/boilerplate.ejs") %>
<style>
    .filterLine{
        display:flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap:wrap;
    }
    .filters{
        display: flex;
        flex-wrap: wrap;
        align-items:center;
    }
    .filter{
        text-align:center;
        margin-left:1.5rem;
        margin-top:1rem;
        opacity:0.7;
    }
    .filter:hover{
        opacity: 1;
        cursor:pointer;
    }
    .filter p{
        font-size:0.7rem;
    }
    .tax-info{
        display:none;
    }
    .tax-toggle{
        padding-right:0.6rem;
        padding-top:0.5rem;
        width:16rem;
        height:3rem;
        border:1px solid black;
        border-radius: 1rem;
    }
</style>
<body>
    <!-- <h3>All Listings</h3> -->
    <!-- <a href="http://localhost:8080/listings/new"><button>Create New</button></a> -->

    <div id="filterLine" class="filterLine">
        <div class="filters">
            <div id="filter" class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
            <div id="filter" class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div id="filter" class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic cities</p>
            </div>
            <div id="filter" class="filter">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p>
            </div>
            <div id="filter" class="filter">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </div>
            <div id="filter" class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing pools</p>
            </div>
            <div id="filter" class="filter">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </div>
            <div id="filter" class="filter">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
            </div>
            <div id="filter" class="filter">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p>Arctic</p>
            </div>
            <div id="filter" class="filter">
                <div><i class="fa-solid fa-igloo"></i></div>
                <p>Domes</p>
            </div>
            <div id="filter" class="filter">
                <div><i class="fa-solid fa-ship"></i></div>
                <p>Boats</p>
            </div>
            <div id="filter" class="filter">
                <div><i class="fa-solid fa-building"></i></div>
                <p>Apartments</p>
            </div>
        </div>    
        <div class="tax-toggle">
            <div class="form-check form-check-reverse form-switch">
            <label class="form-check-label" for="switchCheckDefault">Display total before taxes</label>
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            </div>
        </div>
    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of allListings) { %> 
            <a href="http://localhost:8080/listings/<%=listing._id%>" style="text-decoration: none;">
                <div class="card col listing-card">
                    <img src="<%=listing.image.url%>" class="card-img-top" style="height:20rem" alt="listing_image">
                    <div class="card-img-overlay">
                        <p></p>
                    </div>
                    <div class="card-body">
                      <h5 class="card-title"><%=listing.title%></h5>
                      <p class="card-text">&#8377; <%=listing.price.toLocaleString("en-IN") %>/night <i class="ms-3 tax-info">+18% GST</i></p>
                    </div>
                  </div>
            </a>
            <% }  %>
    </div>

</body>
<script>
    let taxToggleSwitch = document.getElementById("switchCheckDefault");
    taxToggleSwitch.addEventListener("click",()=>{
        //console.log("clicked!");
        let taxInfo = document.getElementsByClassName("tax-info");
        console.log(taxInfo);//HTML COLLECTION OF 39 ELEMENTS
        for(info of taxInfo){
            if(info.style.display != "inline"){
                info.style.display = "inline";
            }
            else{
                info.style.display = "none";
            }
        }
        //taxInfo.style.display = "inline";
    })
</script>
